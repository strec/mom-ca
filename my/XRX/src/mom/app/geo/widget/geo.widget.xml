    <xrx:view>
        <div id="pseudoBody" ng-app="geoApp">
            <div id="getChartersInsideFondService" style="display: none;">{ conf:param('request-root')}service/get-charters-inside-fond</div>
            <div id="getChartersInsideCollectionService" style="display: none;">{ conf:param('request-root')}service/get-charters-inside-collection</div>
            <div id="request-root" style="display: none;">{ conf:param('request-root') }</div>
            <div id="archive-id" style="display: none;">{$archive-id}</div>
            <div id="fond-id" style="display: none;">{$fond-id}</div>
            <div id="charters-with-placeName"></div>
            <div id="chartermarker" style="display: none;">
                <xrx:resource alt="chartermarker" type="image/png">tag:www.monasterium.net,2011:/mom/resource/image/chartermarker_small</xrx:resource>
            </div>
            <div id="chartermarkershadow" style="display: none;">
                <xrx:resource alt="chartermarkershadow" type="image/png">tag:www.monasterium.net,2011:/mom/resource/image/chartermarkershadow_small</xrx:resource>
            </div>

            <div id="chartermarkers" style="display: none;">
                <xrx:resource alt="chartermarkers" type="image/png">tag:www.monasterium.net,2011:/mom/resource/image/chartermarkers_small</xrx:resource>
            </div>
            <div id="chartermarkersshadow" style="display: none;">
                <xrx:resource alt="chartermarkersshadow" type="image/png">tag:www.monasterium.net,2011:/mom/resource/image/chartermarkersshadow_small</xrx:resource>
            </div>

            <div id="archivemarker" style="display: none;">
                <xrx:resource alt="archivemarker" type="image/png">tag:www.monasterium.net,2011:/mom/resource/image/archivemarker</xrx:resource>
            </div>
            <div id="archivemarkershadow" style="display: none;">
                <xrx:resource alt="archivemarkershadow" type="image/png">tag:www.monasterium.net,2011:/mom/resource/image/archivemarkershadow</xrx:resource>
            </div>

            <div id="archive-locations" style="display: none;">
                {
                  for $archive in $archives-in-eag-format
                  order by $archive/eag:repositorid/text() ascending
                  return
                  (
                  <div class="archive" style="display: none;">
                    <archive-name>{ $archive//eag:autform/text() } ({ $archive//eag:repositorid/text() })</archive-name>,
                    <archive-id>{$archive//eag:repositorid/text()}</archive-id>
                    <latitude>{ $archive//eag:location/@latitude/string() }</latitude>,
                    <longitude>{ $archive//eag:location/@longitude/string() }</longitude>
                  </div>
                  )
                }
            </div>
            <div id="all-my-archives">
                <select id="archive-selector">
                {
                  for $archive in $archives-in-eag-format
                  order by $archive//eag:repositorid/text() ascending
                  return
                  <option value="{ $archive//eag:repositorid/text() }">{ $archive//eag:repositorid/text() } ({ $archive//eag:autform/text() })</option>
                }
                </select>
            </div>
            <div ng-controller="PlaceHolderCtrl">
                <div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
                    <div class="mdl-tabs__tab-bar">
