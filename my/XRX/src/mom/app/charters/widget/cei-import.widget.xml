  <xrx:inherits>tag:www.monasterium.net,2011:/mom/widget/charter-import</xrx:inherits>
  <xrx:title>
    <xrx:i18n>
      <xrx:key/>
      <xrx:default/>
    </xrx:i18n>
  </xrx:title>
  <xrx:subtitle/>
  <xrx:description/>
  <xrx:author>jochen.graf@uni-koeln.de</xrx:author>
